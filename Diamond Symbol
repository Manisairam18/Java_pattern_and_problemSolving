 Program: 

class Diamond {
    public static void main(String[] args) {

int n =5;
for(int row=0;row<n*2;row++){
    int spaces = row<n ? row+1 : n*2-row-1;
    int s = n-spaces;
    for(int lines =0;lines<s;lines++){
        System.out.print(" ");
    }
    for(int col=0;col<spaces;col++){
        System.out.print("* ");
    }
    System.out.println();
}

    }
}
